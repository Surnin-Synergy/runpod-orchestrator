{
  "name": "@yourscope/runpod-orchestrator",
  "version": "1.0.0",
  "description": "A Redis-backed, multi-instance task orchestrator for Runpod Serverless",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
